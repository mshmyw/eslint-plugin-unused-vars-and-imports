{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES6",
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "baseUrl": ".",
    "checkJs": false,
    "lib": ["esnext", "DOM"],
    "paths": {
      // path alias
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "rules/index.ts",
  ],
  "exclude": [
    "node_modules",
  ]
 }